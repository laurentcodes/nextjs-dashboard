generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [uuid_ossp(map: "uuid-ossp")]
}

model customers {
  id        String @id @unique
  name      String
  email     String
  image_url String
}

model invoices {
  id          String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  customer_id String
  amount      Int
  status      String
  date        String
}

model revenue {
  month   String @unique
  revenue Int
}

model users {
  id       String @id @unique
  name     String
  email    String
  password String
}
